package fr.unice.polytech.si3.qgl.iaac.drone;

import static fr.unice.polytech.si3.qgl.iaac.EnumJSON.*;

public class State1 implements State {

    /**
     *
     * Demande un echo devant
     *
     */
    @Override
    public void execute(Drone drone) {

	drone.setAction(ECHO.toString(direction.front()));
	
    }

    /**
     *
     * Analyse du résultat et passage à l'etat suivant
     *
     */
    @Override
    public void wait(Drone drone) {

	if (result.equals("GROUND")) {
	    drone.setCaseToTarget((int) ReadJSON.get("range"));
	    drone.setState(new State11());
	}
	else if ((int) ReadJSON.get("range") == 0) {
	    drone.setState(new State10());
	}
	else {
	    drone.setState(new State2());
	}
	 
    }


}
