package fr.unice.polytech.si3.qgl.iaac;

import eu.ace_design.island.bot.IExplorerRaid;
import java.util.LinkedList;
import java.util.List;

public class Explorer implements IExplorerRaid {

    /**
     *
     * Attributes
     *
     */
    private List<Men> men;
    private ReadJSON json;
    private int budget;
    private EnumDirection direction;
    private Drone drone;
    //voir ou on va stocker les ressources

    /**
     *
     * Initialize attributes with the JSON request
     *
     */
    @Override
    public void initialize(String s) {

	json = new ReadJSON();
	json.read(s);
	List<Men> men = new LinkedList();

	budget = json.get("budget");

	for (int i = 0; i < json.get("men"); i++) {
	    men.add(new Men());
	}

	direction = json.get("heading").getEnumDirection();

	drone = new Drone(direction);

	//gÃ©rer les ressources
	
	
    }

    @Override
    public String takeDecision() {

	//correspond au contexte du command pattern state

    }

    @Override
    public void acknowledgeResults(String s) {

    }

    @Override
    public String deliverFinalReport() {

    }
}
